---
import Layout from "@/layouts/Layout.astro";

let splashtext: string[] = [
  "Over 7 Million Users in 2023!",
  "Fastest growing proxy server!",
  "Made by Bubbo!",
  "Check out discord.gg/interstellar :)",
];

const splash: string =
  splashtext[Math.floor(Math.random() * splashtext.length)];
---

<Layout>
  <h1 class="title">Interstellar</h1>
  <p id="splash">{splash}</p>
  <div class="search-container">
    <form id="fs" method="POST" autocomplete="off">
      <input
        id="is"
        class="main-search"
        placeholder="Search with Google or enter address"
        type="text"
        onkeyup="showResults(this.value)"
      />
      <br><div id="result"></div>
    </form>
  </div>

  <script is:inline>

  var search_terms = [
  'games', 
  'unblocked games', 
  'roblox', 
  'now.gg', 
  'geforce now', 
  'discord', 
  'youtube', 
  'github'];

  function autocompleteMatch(input) {
    if (input == '') {
      return [];
    }
    var reg = new RegExp(input)
    return search_terms.filter(function(term) {
      if (term.match(reg)) {
        return term;
      }
    });
  }

  function showResults(val) {
    res = document.getElementById("result");
    res.innerHTML = '';
    let list = '';
    let terms = autocompleteMatch(val);
    for (i=0; i<terms.length; i++) {
      list += '<li>' + terms[i] + '</li>';
    }
    res.innerHTML = '<ul>' + list + '</ul>';
  }

  </script>

